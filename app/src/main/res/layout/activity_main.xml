<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/primaryBackgroundColor">
    <TextView
        android:id="@+id/tv_calc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calc"
        android:textStyle="bold"
        android:textSize="28dp"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="24dp"
        android:layout_marginStart="32dp"/>

    <TextView
        android:id="@+id/tv_theme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Theme"
        android:textStyle="bold"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/switch_change_theme"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"/>


    <Switch
        android:id="@+id/switch_change_theme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="32dp"
        android:scaleX="1.7"
        android:scaleY="1.5"
        tools:ignore="UseSwitchCompatOrMaterialXml" />

    <TextView
        android:id="@+id/tv_expression"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/switch_change_theme"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@color/teal_700"
        android:textAlignment="viewEnd"
        android:textSize="40sp"
        android:textColor="@color/white"
        android:paddingRight="16dp"
        android:scrollHorizontally="true"/>



    <LinearLayout
        android:id="@+id/main_layout"
        android:background="@color/secondaryBackgroundColor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_expression"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="vertical"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:weightSum="4">

            <Button
                android:id="@+id/btn_digit_7"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7"
                android:textColor="@color/secondaryBackgroundColor"
                android:backgroundTint="@color/primaryButton"
                android:layout_marginEnd="16dp"/>

            <Button
                android:id="@+id/btn_digit_8"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8"
                android:textColor="@color/secondaryBackgroundColor"
                android:backgroundTint="@color/primaryButton"
                android:layout_marginEnd="16dp"/>

            <Button
                android:id="@+id/btn_digit_9"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9"
                android:textColor="@color/secondaryBackgroundColor"
                android:backgroundTint="@color/primaryButton"
                android:layout_marginEnd="16dp"/>

            <Button
                android:id="@+id/btn_delete"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="del"
                android:backgroundTint="@color/secondaryButton"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:weightSum="4">

            <Button
                android:id="@+id/btn_digit_4"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4"
                android:textColor="@color/secondaryBackgroundColor"
                android:backgroundTint="@color/primaryButton"
                android:layout_marginEnd="16dp"/>

            <Button
                android:id="@+id/btn_digit_5"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5"
                android:textColor="@color/secondaryBackgroundColor"
                android:backgroundTint="@color/primaryButton"
                android:layout_marginEnd="16dp"/>

            <Button
                android:id="@+id/btn_digit_6"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6"
                android:textColor="@color/secondaryBackgroundColor"
                android:backgroundTint="@color/primaryButton"
                android:layout_marginEnd="16dp"/>

            <Button
                android:id="@+id/btn_add"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+"
                android:textColor="@color/secondaryBackgroundColor"
                android:backgroundTint="@color/primaryButton"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:weightSum="4">

            <Button
                android:id="@+id/btn_digit_1"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textColor="@color/secondaryBackgroundColor"
                android:backgroundTint="@color/primaryButton"
                android:layout_marginEnd="16dp"/>

            <Button
                android:id="@+id/btn_digit_2"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2"
                android:textColor="@color/secondaryBackgroundColor"
                android:backgroundTint="@color/primaryButton"
                android:layout_marginEnd="16dp"/>

            <Button
                android:id="@+id/btn_digit_3"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"
                android:textColor="@color/secondaryBackgroundColor"
                android:backgroundTint="@color/primaryButton"
                android:layout_marginEnd="16dp"/>

            <Button
                android:id="@+id/btn_substract"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                android:textColor="@color/secondaryBackgroundColor"
                android:backgroundTint="@color/primaryButton"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:weightSum="4">

            <Button
                android:id="@+id/btn_decimal"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="."
                android:textColor="@color/secondaryBackgroundColor"
                android:backgroundTint="@color/primaryButton"
                android:layout_marginEnd="16dp"/>

            <Button
                android:id="@+id/btn_digit_0"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@color/secondaryBackgroundColor"
                android:backgroundTint="@color/primaryButton"
                android:layout_marginEnd="16dp"/>

            <Button
                android:id="@+id/btn_divide"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/"
                android:textColor="@color/secondaryBackgroundColor"
                android:backgroundTint="@color/primaryButton"
                android:layout_marginEnd="16dp"/>

            <Button
                android:id="@+id/btn_multiply"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="x"
                android:textColor="@color/secondaryBackgroundColor"
                android:backgroundTint="@color/primaryButton"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:weightSum="2">

            <Button
                android:id="@+id/btn_reset"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="reset"
                android:backgroundTint="@color/secondaryButton"
                android:layout_marginEnd="16dp"/>

            <Button
                android:id="@+id/btn_equals"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="="
                android:backgroundTint="@color/equalsButtonColor"/>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>